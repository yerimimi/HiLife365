<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    tools:ignore="MissingPrefix">
    <TextView
        android:id="@+id/calorie_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screen_left_margin"
        android:layout_marginRight="10dp"
        android:text="오늘"
        android:textSize="@dimen/text_pt_48"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="123dp">
        <TextView
            android:id="@+id/calorie_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,230"
            android:textSize="@dimen/text_pt_60"
            fontPath="fonts/Aero-Matics-Display-Regular.ttf"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="CALORIE"
            android:textSize="@dimen/text_pt_48"
            fontPath="fonts/Aero-Matics-Display-Regular.ttf"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/screen_margin_right"
        android:src="@drawable/icon_right_blue"
        android:layout_gravity="center_vertical|right"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:background="@drawable/shadow"
        android:layout_gravity="bottom"/>
</FrameLayout>