<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/leveltest_guideline_background">

    <TextView
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="레벨 측정 기준"
        android:gravity="center"
        android:background="@drawable/bg_setting"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_cancel_gray"/>
    <LinearLayout
        android:id="@+id/guideline_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/screen_margin_right"
        android:paddingRight="@dimen/screen_left_margin"
        android:layout_below="@+id/textView">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="동작명"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/icon_level5"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/icon_level4"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/icon_level3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/icon_level2"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/icon_level1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextLight"
        android:layout_below="@+id/guideline_header"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_listview"
        android:layout_below="@+id/guideline_header"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/level_test_guideline_item">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="1dp"
        android:background="@color/colorTextLight"
        android:layout_below="@+id/guideline_listview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/linearLayout12"/>

</RelativeLayout>
