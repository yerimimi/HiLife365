<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    tools:ignore="MissingPrefix">
    <ImageView
        android:id="@+id/leveltest_result_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_pushup_blue"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/leveltest_result_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="푸시업"
        android:textSize="@dimen/text_pt_60"
        android:layout_toRightOf="@+id/leveltest_result_image"/>
    <TextView
        android:id="@+id/leveltest_result_count_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="회"
        android:textSize="@dimen/text_pt_60"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"/>
    <TextView
        android:id="@+id/leveltest_result_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="23"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_pt_72"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/leveltest_result_count_unit"
        fontPath="fonts/Aero-Matics-Display-Regular.ttf"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:background="@drawable/shadow"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>