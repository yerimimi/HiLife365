<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/test_item"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="10dp"
    tools:ignore="MissingPrefix">
    <ImageView
        android:id="@+id/test_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_test_pushup"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/test_image">
        <TextView
            android:id="@+id/test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="푸쉬업"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/test_image"
            fontPath="fonts/NotoSansKR-Bold-Hestia.otf"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bullet"
                android:layout_width="@dimen/bullet_size"
                android:layout_height="@dimen/bullet_size"
                android:src="@drawable/bullet"
                android:layout_margin="2.5dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/test_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="푸쉬업"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/test_preview"
        android:layout_width="91dp"
        android:layout_height="63dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dummy_image"
        android:scaleType="fitCenter"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />
</RelativeLayout>