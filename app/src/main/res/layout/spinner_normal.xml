<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="MissingPrefix"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="@dimen/screen_margin_right"
        android:paddingLeft="@dimen/screen_left_margin">
        <ImageView
            android:id="@+id/bullet"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bullet"/>
        <TextView
            android:layout_toRightOf="@+id/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_text"
            android:text="부위별"
            android:textSize="@dimen/text_pt_60"
            android:textColor="@color/colorPurpleBg"
            android:layout_gravity="center"
            fontPath="fonts/Aero-Matics-Display-Bold.ttf"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_bottom"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextLight"/>
</LinearLayout>
