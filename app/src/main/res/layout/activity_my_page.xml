<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_setting"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/profile_image_container"
            android:layout_width="@dimen/profile_size"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/profile_top_margin"
            android:src="@drawable/icon_profile"
            android:layout_gravity="center"
            android:layout_below="@+id/toolbar"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="님, 안녕하세요"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_pt_48"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/profile_image_container"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/profile_level"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/icon_level1"
            android:layout_gravity="center"
            android:layout_below="@+id/profile_name"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/profile_level_bottom_margin"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/profile_level"
        android:background="@drawable/shadow"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_bottom_button_height"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/conn_bluetooth"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/mypage_icon_size"
                    android:layout_height="@dimen/mypage_icon_size"
                    android:layout_margin="20dp"
                    android:src="@drawable/icon_bluetooth"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_pt_48"
                    android:text="블루투스"/>
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/button_container"
                android:background="@drawable/shadow_right"/>
            <LinearLayout
                android:id="@+id/plan_reset_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/plan_reset_button"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/mypage_icon_size"
                    android:layout_height="@dimen/mypage_icon_size"
                    android:layout_margin="20dp"
                    android:src="@drawable/icon_reset" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_pt_48"
                    android:text="플랜초기화" />
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/button_container"
                android:background="@drawable/shadow_right"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/user_change_info_button"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/mypage_icon_size"
                    android:layout_height="@dimen/mypage_icon_size"
                    android:layout_margin="20dp"
                    android:src="@drawable/icon_edit_profile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_pt_48"
                    android:text="내 정보 수정"/>
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/button_container"
                android:background="@drawable/shadow_right"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/logout"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/mypage_icon_size"
                    android:layout_height="@dimen/mypage_icon_size"
                    android:layout_margin="20dp"
                    android:src="@drawable/icon_logout"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_pt_48"
                    android:text="로그아웃"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/button_container"
            android:background="@drawable/shadow"
            android:id="@+id/view" />
    </RelativeLayout>
</LinearLayout>
