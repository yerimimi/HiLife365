<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="@dimen/screen_left_margin"
        android:paddingRight="@dimen/screen_margin_right">
        <ImageView
            android:id="@+id/exercise_program_image"
            android:layout_width="43dp"
            android:layout_height="39dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_exercise_program"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO"
            android:textColor="@color/colorPurpleBg"
            android:textSize="@dimen/text_pt_72"
            fontPath="fonts/Aero-Matics-Display-Bold.ttf"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/exercise_program_image" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 영상"
            android:textSize="@dimen/text_pt_52"
            android:layout_toRightOf="@+id/exercise_program_image"
            android:layout_alignBottom="@+id/exercise_program_image"
            fontPath="fonts/NotoSansKR-Medium-Hestia.otf"/>
        <RadioGroup
            android:id="@+id/level_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="23dp"
            android:layout_below="@+id/exercise_program_image">
            <RadioButton
                android:id="@+id/level_part"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginRight="1dp"
                android:text="부위별"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:button="@null"
                android:background="@drawable/bg_radio_level"/>
            <RadioButton
                android:id="@+id/level_props"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginRight="1dp"
                android:text="소도구별"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:button="@null"
                android:background="@drawable/bg_radio_level"/>
            <RadioButton
                android:id="@+id/level_function"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginRight="1dp"
                android:text="기능별"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:button="@null"
                android:background="@drawable/bg_radio_level"/>
        </RadioGroup>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:background="@drawable/shadow"/>
    <Spinner
        android:id="@+id/program_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/individual_program_list"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/construction_title"
        tools:listitem="@layout/exercise_program_item"/>
</LinearLayout>