<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <corners android:radius="15dp"/>
            <solid android:color="@color/colorOrangeBt"/>
            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="0dp"
                android:top="0dp"/>
        </shape>
    </item>
    <item
        android:state_checked="true">
        <shape>
            <corners android:radius="15dp"/>
            <solid android:color="@color/colorOrangeBt"/>
            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="0dp"
                android:top="0dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="15dp"/>
            <solid android:color="#E0E0E0"/>
            <padding
                android:left="15dp"
                android:right="15dp"
                android:bottom="0dp"
                android:top="0dp"/>
        </shape>
    </item>
</selector>