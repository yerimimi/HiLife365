<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8dp"/>
            <stroke android:color="@color/colorBlueBt"
                android:width="3dp"/>
            <solid android:color="@color/colorWhiteBtPressed"/>
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="8dp"/>
            <stroke android:color="@color/colorBlueBt"
                android:width="3dp"/>
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"/>
        </shape>
    </item>
</selector>